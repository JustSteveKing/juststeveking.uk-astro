---
import { Image } from '@astrojs/image/components';

import HeaderLink from './HeaderLink.astro';

import avatar from './../assets/images/avatar.png';

import { SITE_TITLE } from '../config';
---

<header class="pointer-events-none relative z-50 flex flex-col">
	<div class="sm:px-8 top-0 order-last -mb-3 pt-3">
		<div class="mx-auto max-w-7xl lg:px-8">
			<div class="relative px-4 sm:px-8 lg:px-12">
				<div class="mx-auto max-w-2xl lg:max-w-5xl">
					<div class="top-[var(--avatar-top,theme(spacing.3))] w-full" style="position:var(--header-inner-position)">
						<div class="relative">
							<div class="absolute left-0 top-3 origin-left transition-opacity h-10 w-10 rounded-full bg-white/90 p-0.5 shadow-lg shadow-zinc-800/5 ring-1 ring-zinc-900/5 backdrop-blur dark:bg-zinc-800/90 dark:ring-white/10"></div>
							<a aria-label="Home" class="block h-16 w-16 origin-left pointer-events-auto" href="/">
								<Image
									src={avatar}
									format="avif"
									alt="JustSteveKings' avatar"
									class="rounded-full bg-zinc-100 object-cover dark:bg-zinc-800 h-16 w-16"
								/>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<h2>
		{SITE_TITLE}
	</h2>
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/blog">Blog</HeaderLink>
		<HeaderLink href="/about">About</HeaderLink>
		<HeaderLink href="https://twitter.com/astrodotbuild" target="_blank">Twitter</HeaderLink>
		<HeaderLink href="https://github.com/withastro/astro" target="_blank">GitHub</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
